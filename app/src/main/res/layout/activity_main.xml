<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B2F7D32">
    <!-- Main Title with Device Info -->
    <LinearLayout
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">


        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv2"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:src="@drawable/app_logo"

            android:transitionName="logo_image"
            />

    </LinearLayout>

    <!-- Stress Level Display -->
    <LinearLayout
        android:id="@+id/hardwareDeviceSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appname"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/hardwareDeviceStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardware Device"
            android:textColor="#2F7D32"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- Spacer to push the status text to the right -->
        <Space
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Status Box -->
        <TextView
            android:id="@+id/connectionStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="#D3D3D3"
            android:gravity="center"
            android:padding="8dp"
            android:text="Not Connected"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/stressLevelSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center"
        android:layout_below="@+id/hardwareDeviceSection"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/stresscard"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">
                <!-- Stress Level Progress Bar -->

                <TextView
                    android:id="@+id/stressStatusTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Current Stress Level"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stressLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CALM"
                    android:textColor="#2F7D32"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        android:layout_above="@id/buttonsContainer"
        android:layout_below="@id/stressLevelSection"
        tools:ignore="NotSibling"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp">

            <!-- GSR Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/gsrCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="16dp">
                    <!-- GSR Title -->
                    <TextView
                        android:id="@+id/gsrTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GSR"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="#2F7D32"/>
                    <!-- Right Arrow Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"
                        />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BPM Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bpmCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="16dp">
                    <!-- BPM Title -->
                    <TextView
                        android:id="@+id/bpmTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PPG"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="#2F7D32"/>
                    <!-- Right Arrow Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Notification Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/NotificationCountCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="16dp">

                    <TextView
                        android:id="@+id/notificationStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notification Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="#2F7D32"/>
                    <!-- Right Arrow Icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Battery Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/batteryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/batteryStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Battery"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textColor="#2F7D32"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Phone Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/phoneringerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/phoneStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone Status"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="#2F7D32"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"

                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Accelerometer Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/accelerometerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/accelerometerStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Accelerometer"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Gyroscope Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/gyroscopeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/gyroscopeStatusTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gyroscope"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Ambient Light Sensor Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/lightCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/lightsensorTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ambient Light Sensor"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sound Level Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/soundCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/soundLevelTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detect Stress Level"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_forward"

                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Phone Status Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/phoneStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/phoneCallStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginEnd="8dp"/>

                        <!-- Value for Manufacturer -->
                        <TextView
                            android:id="@+id/phoneStatusValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unknown"
                            android:textSize="16sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ringer Mode Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ringerModeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ringerModeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringer Mode"
                        android:textColor="#2F7D32"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Mode"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"

                            />

                        <!-- Value for Manufacturer -->
                        <TextView
                            android:id="@+id/ringerModeValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unknown"
                            android:textColor="#757575"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Extra Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/screenStatusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/screenStatusTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Screen Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginEnd="8dp"

                            />

                        <!-- Value for Manufacturer -->
                        <TextView
                            android:id="@+id/screenStatusValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Off"
                            android:textSize="16sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Screen Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2F7D32" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_marginEnd="8dp"

                            />

                        <!-- Value for Manufacturer -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Off"
                            android:textSize="16sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <!-- Start and Stop Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/startButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textColor="@android:color/white"
                android:backgroundTint="#2F7D32"
                android:background="#2F7D32"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textColor="@color/white"
                android:background="@color/red_primary"
                android:padding="12dp"
                android:elevation="4dp"
                android:layout_margin="8dp"/>


        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:backgroundTint="#2F7D32"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>


</RelativeLayout>
