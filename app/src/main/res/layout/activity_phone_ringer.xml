<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/appname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:contentDescription="Back button"
            android:transitionName="logo_image" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:src="@drawable/app_logo"
            android:contentDescription="App logo"
            android:transitionName="logo_image" />
    </LinearLayout>

    <!-- Phone Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/phoneStatusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/phoneCallStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2F7D32" />

            <TextView
                android:id="@+id/phoneStatusDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Unknown"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Ringer Mode Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ringerModeCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/ringerModeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringer Mode"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2F7D32" />

            <TextView
                android:id="@+id/ringerModeDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode: Unknown"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Screen Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/screenStatusCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/screenStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screen Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2F7D32" />

            <TextView
                android:id="@+id/screenStatusDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Unknown"
                android:textSize="16sp"
                android:textColor="#757575"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
